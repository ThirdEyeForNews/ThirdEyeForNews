<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.thirdeye.MediaSelectedActivity">

    <TextView
        android:id="@+id/imageGridViewHeading"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Images"
        android:gravity="center"
        android:textSize="20dp"/>

    <GridView
        android:id="@+id/imageGridView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:columnWidth="100dp"
        android:drawSelectorOnTop="true"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_below="@+id/imageGridViewHeading"
        >

    </GridView>

    <TextView
        android:id="@+id/videoGridViewHeading"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Vedios"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@+id/imageGridView"
        />

    <GridView
        android:id="@+id/videoGridView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:columnWidth="100dp"
        android:drawSelectorOnTop="true"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_below="@+id/videoGridViewHeading"
        >

    </GridView>

    <Button
        android:id="@+id/mediaSelectionProceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Proceed"
        android:background="@drawable/rounded_custom_button"/>

</RelativeLayout>
